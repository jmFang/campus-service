.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.top-img {
  width: 100%;
  height: 350rpx;
  border-bottom: 4rpx solid #ddf;
  box-shadow: 0 2rpx 2rpx #ddd;
}
.top-img  image {
  width: 100%;
  height: 350rpx;
}
.content {
  width: 100%;
  margin-top: 10rpx;
  border-bottom: 4rps solid #ddf;
  box-shadow: 0 2rpx 2rpx 2rpx #ddd;
}
.content text {
  display: block;
  line-height: 20rpx;
  font-size:24rpx;
  color: #ddd;
}
.content-top {
  height: 50%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-top: 2rpx solid #ddd;
  border-bottom: 2rpx solid #ddd;
}
.top {
  border-right: 3rpx solid #ddf;
  flex: 1;
  height: 180rpx;
  text-align: center;
  padding-top: 20rpx;
}
.content-bottom {
  height: 50%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-bottom: 2rpx solid #ddd;
}
image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 30rpx;
}
.footer {
  width: 100%;
  line-height: 200rpx;
  text-align: center;
}
.footer text {
  font-size: 20rpx;
  color: #ddd;
}